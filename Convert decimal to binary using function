#include <stdio.h>

void decimalToBinary(int n) {
    int binary[32], i = 0;

    while(n > 0) {
        binary[i] = n % 2;
        n /= 2;
        i++;
    }

    for(i = i-1; i >= 0; i--)
        printf("%d", binary[i]);
}

int main() {
    int n;
    printf("Enter decimal number: ");
    scanf("%d", &n);
    printf("Binary = ");
    decimalToBinary(n);
    return 0;
}
